<Window x:Class="IoTDeviceManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IoT Device Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="IoT Device Manager" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Monitor and manage your IoT devices in real-time" 
                               FontSize="12" 
                               Foreground="#BDC3C7" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#27AE60" CornerRadius="5" Padding="15,8" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Fill="White" Width="10" Height="10" Margin="0,0,8,0"/>
                            <TextBlock Text="Online: " Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="{Binding OnlineDevicesCount}" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E74C3C" CornerRadius="5" Padding="15,8" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Fill="White" Width="10" Height="10" Margin="0,0,8,0"/>
                            <TextBlock Text="Offline: " Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="{Binding OfflineDevicesCount}" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Devices -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Actions -->
                <Border Grid.Row="0" Background="#ECF0F1" Padding="10" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Add Device" 
                                Command="{Binding AddDeviceCommand}"
                                Style="{StaticResource ActionButton}"/>
                        <Button Content="✏️ Edit" 
                                Command="{Binding EditDeviceCommand}"
                                Style="{StaticResource ActionButton}"/>
                        <Button Content="🗑️ Delete" 
                                Command="{Binding DeleteDeviceCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#E74C3C"/>
                        <Button Content="🔄 Toggle Status" 
                                Command="{Binding ToggleStatusCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F39C12"/>
                        <Button Content="↻ Refresh" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#95A5A6"/>
                    </StackPanel>
                </Border>

                <!-- Device List -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Devices}"
                          SelectedItem="{Binding SelectedDevice}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F8F9FA"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Status" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12" Height="12">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="Red"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                        <Setter Property="Fill" Value="LimeGreen"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Device Name" 
                                          Binding="{Binding Name}" 
                                          Width="*"/>

                        <DataGridTextColumn Header="Type" 
                                          Binding="{Binding Type}" 
                                          Width="100"/>

                        <DataGridTextColumn Header="Location" 
                                          Binding="{Binding Location}" 
                                          Width="150"/>

                        <DataGridTextColumn Header="Units" 
                                          Binding="{Binding Units}" 
                                          Width="70"/>

                        <DataGridTextColumn Header="IP Address" 
                                          Binding="{Binding IpAddress}" 
                                          Width="130"/>

                        <DataGridTextColumn Header="Firmware" 
                                          Binding="{Binding FirmwareVersion}" 
                                          Width="100"/>

                        <DataGridTextColumn Header="Last Seen" 
                                          Binding="{Binding LastSeen, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                          Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Device Details -->
                <Border Grid.Row="2" 
                        Background="#F8F9FA" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        Padding="15" 
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Device Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDevice.Name, FallbackValue='No device selected'}" Margin="10,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDevice.StatusText, FallbackValue='-'}" Margin="10,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="IP Address:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDevice.IpAddress, FallbackValue='-'}" Margin="10,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="ID:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedDevice.Id, FallbackValue='-'}" Margin="10,5" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#BDC3C7"/>

            <!-- Right Panel - Logs and Real-time Data -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Real-time Communication -->
                <GroupBox Grid.Row="0" Header="Real-time Device Communication" Margin="0,0,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                            <Button Content="▶ Start" 
                                    Command="{Binding StartCommunicationCommand}"
                                    Padding="10,5" 
                                    Margin="2"
                                    Background="#27AE60"
                                    Foreground="White"
                                    BorderThickness="0"/>
                            <Button Content="⏸ Stop" 
                                    Command="{Binding StopCommunicationCommand}"
                                    Padding="10,5" 
                                    Margin="2"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding RealtimeData}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Background="#F8F9FA"
                                 Margin="5"
                                 FontFamily="Consolas"
                                 FontSize="11"/>
                    </Grid>
                </GroupBox>

                <!-- Activity Logs -->
                <GroupBox Grid.Row="1" Header="Activity Logs" Margin="0,5,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListBox Grid.Row="0" 
                                 ItemsSource="{Binding Logs}"
                                 DisplayMemberPath="."
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Background="#F8F9FA"
                                 FontFamily="Consolas"
                                 FontSize="11"/>

                        <Button Grid.Row="1" 
                                Content="Clear Logs" 
                                Command="{Binding ClearLogsCommand}"
                                Padding="10,5" 
                                Margin="5"
                                Background="#95A5A6"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalAlignment="Right"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='Last Updated: {0:HH:mm:ss}'}" 
                           Foreground="#BDC3C7" 
                           VerticalAlignment="Center"
                           xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
            </Grid>
        </Border>
    </Grid>
</Window>